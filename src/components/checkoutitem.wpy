<style type="less">
checkoutitem {
  width: 95%;
  margin: 0px;
  padding-bottom: 10px;
}
.checkoutitem {
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 5px 5px 5px 5px;
}
.content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 15px;
  margin-left: 3px;
}
.price-stepper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 15px;
  margin-top: 5px;
}
button.cart-icon-button {
  border: none;
  background-color: transparent;
  color: sienna;
  padding: 5px 5px 5px 5px;
  margin: 0;
  width: auto;
  min-width: auto;
}
.cart-item-operation {
  display: flex;
  align-items: flex-end;
  flex-direction: row;
}
.cart-item-operation-multip {
  color: #c8c9cc;
}
.subdivide {
  margin-left: 3px;
  color: #c8c9cc;
  font-size: 11px;
}
</style>

<template>
  <view class="checkoutitem">
    <image
      cover
      lazy-load
      fit="cover"
      style="width:{{width*0.40}}px;height:{{width*0.40}}px;"
      src="{{item.commodity.photo}}"
    />
    <view style="width:95%;">
      <text class="content">{{item.commodity.name}}</text>
      <text
        wx:if="{{!item.commodity.defaultSubdivide}}"
        class="subdivide"
      >{{subdivide}}</text>
      <view class="price-stepper">
        <view>ï¿¥{{price}}</view>
        <view class="cart-item-operation">
          <view class="cart-item-operation-multip">
            x
          </view>
          {{item.count}}
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from '@wepy/core';
import { buildPictureUrl } from '../utils/tools';
wepy.component({
  props: {
    item: {},
    width: 100,
  },
  data: {
    windowHeight: 0,
    windowWidth: 0,
  },
  computed: {
    price: function() {
      var price = 0;
      if (this.item) {
        price = this.item.sku.price;
      }
      return price;
    },
    subdivide: function() {
      var subdivide = [];
      if (this.item) {
        for (var i = 0; i < this.item.sku.subdivide.length; i++) {
          subdivide.push(this.item.sku.subdivide[i].value);
        }
      }
      return subdivide.join(', ');
    },
  },
  methods: {},
});
</script>

